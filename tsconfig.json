{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                           
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,                                 
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "resolveJsonModule": true
  }
}
